/* miniprogram/pages/square/square.wxss */
.no_goal{
  color:#b4b2b2;
  width:100%;
  display: block;
  text-align: center;
  margin-top:200rpx;
}
.list_wrap{
  padding-top:20rpx;
}

.list_inner{
  padding:0 30rpx;
  position: relative;
  font-size: 14px;
  overflow: hidden;
  background:#fff;
  padding-top: 20rpx;
}
.list_wrap:nth-child(1){
  padding:0;
}


.sign_pic{
  width:70rpx;
  height:70rpx;
  position: absolute;
  left:0;
  top:0;
}
.sex_pic{
  width:30rpx;
  height:30rpx;
  vertical-align: middle;
}
.list_top{
  overflow: hidden;
  line-height: 50rpx;
  font-size: 14px;
  margin-bottom:20rpx;
}
.list_top text{
  float:right;
  font-size: 12px;
  color:#666;
}
.headimg{
  width:50rpx;
  height:50rpx;
  border-radius: 50%;
  float:left;
  margin-right:20rpx;
}
.like{
  width:100%;
  border-top:1px solid rgb(223, 220, 220);
  margin-top:20rpx;
  height:80rpx;
  display: flex;
  justify-content: space-around;  
  align-items: center;
}

.like image{
  width:40rpx;
  height:40rpx;
}
.goalname{
  font-weight: 600;
  font-size: 16px;
}
.sentence{
  padding:10rpx 0;
  color:#555;
}
.loop_pic{
  overflow: hidden;
  margin:30rpx 0;
  margin-top: 20rpx;
}
.loop_pic view{
  width:30%;
  margin-right:3.33%;
  height:200rpx;
  overflow: hidden;
  float:left;
}
.loop_pic view image{
  width:100%;
  height:100%;
}