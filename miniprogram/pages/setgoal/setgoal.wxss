/* miniprogram/pages/setgoal/setgoal.wxss */
.setgoal_wrap{
  padding:40rpx;
  overflow: hidden;
}
.goal_title{
  color:#444;
  margin-bottom:30rpx;
}
.goal_input{
  width:100%;
  height:80rpx;
  line-height: 80rpx;
  border:1px solid #999;
  border-radius: 10rpx;
  text-align: center;
  margin-bottom:50rpx;
}
.data_picker{
  width:100%;
  height:80rpx;
  line-height: 80rpx;
  border:1px solid #999;
  border-radius: 10rpx;
  text-align: center;
  margin-bottom:50rpx;
}
.save_goal{
  width:100%;
  font-weight: normal;
  position: fixed;
  bottom:100rpx;
  left:50%;
  transform: translateX(-50%);
}