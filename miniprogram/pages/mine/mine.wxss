.mine_head{
  width:100%;
  height:500rpx;
  position: relative;
}
.mine_shadow{
  width:100%;
  height:100%;
  background:rgba(0,0,0,0.8);
  position: absolute;
  top:0;
  left:0;
}
.head_pic_wrap{
  width:200rpx;
  height:200rpx;
  background:#fff;
  position: absolute;
  z-index: 2;
  border-radius: 50%;
  overflow: hidden;
  left:50%;
  transform:translateX(-50%);
  top:80rpx;
  border:1px solid #fff;
}
.user_name{
  width:100%;
  position: absolute;
  top:320rpx;
  text-align: center;
  color:#fff;
  z-index: 3;
}
.get_userinfo{
  margin-top:200rpx;
  font-weight: 200;
}
.user_info_other{
  width:100%;
  text-align: center;
  color:#fff;
  position: absolute;
  bottom:60rpx;
  font-size: 14px;
}
.user_info_other text{
  display: inline-block;
  margin-left:20rpx;
}
.setting{
  width:60rpx;
  height:60rpx;
  position: absolute;
  top:40rpx;
  right:40rpx;
  z-index: 99;
}
.mine_ctn{
  text-align: center;
  padding:40rpx;
}