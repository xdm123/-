/* miniprogram/pages/goal/goal.wxss */
.set_goal,.set_goal_btn{
  display: block;
  width:100rpx;
  height:100rpx;
  border-radius: 50%;
  position: fixed;
  bottom:20rpx;
  left:50%;
  margin-left:-50rpx;
  z-index: 99;
}
.set_goal image,.set_goal_btn image{
  width:100%;
  height:100%;
}
.no_goal{
  width:100%;
  text-align: center;
  color:#777;
  display: block;
  margin-top:400rpx;
}
.goal_list{
  width:75%;
  padding:40rpx 40rpx;
  padding-left:70rpx;
  margin:20rpx auto;
  border-radius:20rpx;
  border:1px solid #999;
  position: relative;
  font-size: 14px;
}
.goal_list view{
  margin:20rpx 0;
}
.sign_pic{
  width:70rpx;
  height:70rpx;
  position: absolute;
  left:0;
  top:0;
}
.signBtn,.signBtnnot,.signBtnyi{
  width:150rpx;
  height:80rpx;
  margin:0 !important;
  padding:0 !important;
  background:rgb(146, 5, 5);
  position: absolute;
  right:40rpx;
  top:50%;
  transform: translateY(-50%);
  line-height: 80rpx;
  text-align: center;
  color:#fff;
  border-radius: 10px;
}
.signBtnnot{
  background:orange;
}
.signBtnyi{
  background:rgb(3, 126, 24);
}
